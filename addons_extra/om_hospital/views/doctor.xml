<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_view_form" model="ir.ui.view">
        <field name="name">doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ref"/>
                        <field name="gender"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="doctor_view_tree" model="ir.ui.view">
        <field name="name">doctor.view.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="ref"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_doctors" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <menuitem
            id="menu_doctors"
            name="Doctors"
            parent="menu_hospital_master"
            action="action_hospital_doctors"
            sequence="20"/>

</odoo>
