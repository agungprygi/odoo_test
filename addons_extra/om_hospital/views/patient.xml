<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hospital.patient.view.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_child"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="capitalize_name"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.view.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="capitalize_name"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_patients"
            name="Patients"
            parent="menu_hospital_operations"
            action="action_hospital_patient"
            sequence="10"/>

</odoo>
